<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#FF5001"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_exit"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="登录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@mipmap/ic_default_user_head"/>

        <TextView
            android:id="@+id/tv_name"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/qubudd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="31dp"
        android:background="#fff"
        android:layout_below="@+id/woRelat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/mei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dd"
            android:layout_margin="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quanbudingdan"
            android:text="全部订单"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_alignBottom="@+id/mei"
            android:layout_toRightOf="@+id/mei"
            android:layout_toEndOf="@+id/mei"
            android:layout_marginStart="11dp" />

        <ImageButton
            android:id="@+id/ib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjiantou"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/wodediyi"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#F4F4F5"
        android:layout_below="@+id/qubudd"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/wf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:button="@null"
            android:drawableTop="@mipmap/ic_user_property_money"
            android:gravity="center"
            android:text="未付款"
            />

        <RadioButton
            android:id="@+id/fh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/fh"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="待发货"

            />


        <RadioButton
            android:id="@+id/sh2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/sh"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="待收货"

            />

        <RadioButton
            android:id="@+id/dpj2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/pj"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="待评价"

            />

        <RadioButton
            android:id="@+id/th2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/tk"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="退款/货"

            />
    </RadioGroup>



    <RelativeLayout
        android:id="@+id/wodecc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/wodediyi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/cc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/aicc"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wodecaican2"
            android:text="我的财产"
            android:textSize="20sp"
            android:layout_gravity="center"

            android:layout_alignBottom="@+id/ib2"
            android:layout_toRightOf="@+id/cc2"
            android:layout_toEndOf="@+id/cc2" />

        <ImageButton
            android:id="@+id/ib2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjiantou"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RadioGroup
        android:id="@+id/wodedier"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="#F4F4F5"
        android:layout_below="@+id/wodecc"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/wf2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:button="@null"
            android:drawableTop="@mipmap/wodecc"
            android:gravity="center"
            android:text="预存款"
            />

        <RadioButton
            android:id="@+id/fh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/czk"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="充值卡"

            />


        <RadioButton
            android:id="@+id/sh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/djj"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="代金券"

            />

        <RadioButton
            android:id="@+id/dpj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/hb"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="红包"

            />

        <RadioButton
            android:id="@+id/th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/jf"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="积分"
            />
    </RadioGroup>


    <RelativeLayout
        android:id="@+id/shdizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#fff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/wodedier"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shdizhi"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_address"
            android:text="收货地址"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/ib3"
            android:layout_toRightOf="@+id/cc"
            android:layout_toEndOf="@+id/cc" />

        <ImageButton
            android:id="@+id/ib3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjiantou"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sezhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#fff"
        android:layout_below="@+id/shdizhi"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/sz"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wodecaicana"
            android:text="系统设置"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_alignTop="@+id/ccc"
            android:layout_toRightOf="@+id/ccc"
            android:layout_toEndOf="@+id/ccc" />

        <ImageButton
            android:id="@+id/ibb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/rightjiantou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</LinearLayout>